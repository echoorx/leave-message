.comments_box {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #eee;
}
.avatar_style {
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  margin-right: 10px; 
}
.img_style {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  overflow: hidden;
  align-self: center;
}
.info {
  flex: 1;
}
.info_text {
  font-size: 12px;
  color: #666;
}
.nickName,
.pos_style {
  display: inline-block;
  margin-right: 10px;
}
.no_more {
  text-align: center;
  color: #ccc;
  font-size: 12px;
  padding: 10px 0;
}