/* weui */
@import "./styles/weui.wxss";
/**app.wxss**/
page {
  min-height: 100vh;
}
.container {
  width: 100%;
  height: 100%;
  padding: 0;
  box-sizing: border-box;
}
.weui-panel__hd:after {
  left: 0;
}
.weui-media-box:before {
  left: 0;
}
.weui-cell:before {
  left: 0;
}
.my_card_top {
  /* display: flex; */
  font-size: 16px;
}
.title_style {
  display: inline-block;
  vertical-align: bottom;
}
.area_style {
  display: inline-block;
  vertical-align: bottom;  
  margin-left: 16px;
  width: 70%;
  color: #666;
  overflow: hidden;
  /* background: black; */
  white-space: nowrap;
  text-overflow: ellipsis;
}
.no_more {
  text-align: center;
  color: #ccc;
  font-size: 12px;
  padding: 10px 0;
  border-top: 2px solid #eee;
}
.br {
  border-right: 1px solid #eee; 
}
.weui-media-box_appmsg {
  align-items: flex-start;
}
.weui-media-box__hd_in-appmsg {
  width: 30px;
  height: 30px;
  overflow: hidden;
  border-radius: 50%;
}
.weui-panel__bd {
  border-bottom: 1px solid #ddd;
}
.weui-media-box__desc {
  word-break: break-all;
}